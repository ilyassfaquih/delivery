<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="14-02-2026-add-customer-code" author="ilyas">
        <addColumn tableName="customer">
            <column name="code" type="VARCHAR(50)">
                <constraints unique="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="14-02-2026-create-food-order-v2" author="ilyas">
        <createTable tableName="food_order">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="delivery_time" type="TIME">
                <constraints nullable="false"/>
            </column>

            <column name="delivery_mode" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="customer_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_food_order_customer" references="customer(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>